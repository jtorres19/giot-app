<!--*******************************************Icon Giot*****************************************-->
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:tint="@color/colorGiot"
            android:src="@drawable/logo_giot" />
<!--*******************************************Icon Giot*****************************************-->

        </LinearLayout>
    </LinearLayout>
</ScrollView>
