<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.LoginActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<!--*******************************************Icon Giot*****************************************-->
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:tint="@color/colorBlack"
            android:src="@drawable/icon_giot" />
<!--********************************************Icon Giot****************************************-->

<!--********************************************Layout User****************************************-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_input"
            android:elevation="8dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/user"
                android:tint="@color/colorGiot"
                android:layout_gravity="center"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layoutUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Custom.TextInputLayoutIcons">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintTxtLogin"
                    android:inputType="text"
                    android:theme="@style/Custom.TextInputEditText"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
<!--********************************************Layout User****************************************-->

<!--********************************************Layout Password****************************************-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/layout_input"
            android:elevation="8dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:tint="@color/colorGiot"
                android:src="@drawable/password"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layoutPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:theme="@style/Custom.TextInputLayoutIcons">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintTxtPassword"
                    android:inputType="textPassword"
                    android:theme="@style/Custom.TextInputEditText"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
<!--********************************************Layout Password****************************************-->


<!--********************************************Button Login****************************************-->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/layout_button"
            android:layout_marginTop="24dp"
            android:text="@string/btnTxtLogin"
            android:theme="@style/Custom.AppCompatButton"/>
<!--********************************************Button Login****************************************-->


<!--***************************************** Text recover password ***************************************************-->
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblRecoverPassword"
            android:textColor="@color/colorLoginWith"
            android:layout_marginTop="4dp"
            android:elevation="8dp"
            android:layout_gravity="center"/>
<!--***************************************** Text recover password ***************************************************-->

<!--******************************************* Text LOGIN WITH **********************************************-->
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblLogin"
            android:textColor="@color/colorLoginWith"
            android:layout_marginTop="24dp"
            android:elevation="8dp"
            android:layout_gravity="center"/>
<!--******************************************* Text LOGIN WITH **********************************************-->


<!--***************************************** Buttons login ***************************************************-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/facebook" />

            <android.support.v7.widget.AppCompatButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/strava"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/google"/>

        </LinearLayout>
<!--***************************************** Buttons login ***************************************************-->


<!--********************************************Text Register****************************************-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@color/colorBlack">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorRegister"
                    android:text="@string/lblRegister">
                </android.support.v7.widget.AppCompatTextView>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtGoToRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorRegister"
                    android:text="@string/lblGoToRegister"/>

            </LinearLayout>
<!--********************************************Text Register****************************************-->


<!--*******************************************Icon Giot*****************************************-->
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:tint="@color/colorGiot"
                android:src="@drawable/logo_giot" />
<!--********************************************Icon Giot****************************************-->

        </LinearLayout>
    </LinearLayout>
</ScrollView>
